<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_wisata"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/trans_studio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_wisata"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Trans Studio" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_wisata"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama"
        tools:text="Rp.150.000" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_wisata"
        app:layout_constraintTop_toBottomOf="@+id/txt_harga"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Jl. Metro Tj. Bunga, Maccini Sombala, Tamalate, Kota Makassar, Sulawesi Selatan." />

</androidx.constraintlayout.widget.ConstraintLayout>